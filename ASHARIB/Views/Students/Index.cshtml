@model IEnumerable<ASHARIB.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" style="color:#A04000;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                    <button><a asp-action="Edit" asp-route-id="@item.Id" style="color:cadetblue">Edit</a></button>
                    <button><a asp-action="Details" asp-route-id="@item.Id" style="color:red">Details</a></button>
                    <button>
                        <a asp-action="Delete" asp-route-id="@item.Id" style="color:deeppink">Delete</a> </button>
            </td>
        </tr>
}
    </tbody>
</table>
